name: serverchan-action

on: [push]

jobs:
  serverchan:
    name: Server chan
    runs-on: ubuntu-latest
    steps:
      - name: Sending message
        uses: yakumioto/serverchan-action@v1
        with:
          key: ${{ secrets.sckey }}
          text: {消息标题}
          desp: {消息内容 支持 MarkDown}
